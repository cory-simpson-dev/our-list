<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div>
        <h1>Our List</h1>
    </div>
    <div>
        <ul class="tasks">
        <% for(let i=0; i < info.length; i++) {%>
            <% if(info[i].class === 'todo') { %>
            <li class="task">
                <span><%= info[i].taskBody %></span>
                <span><%= info[i].deadline.split('T').join(' ') %></span>
                <!-- <span><%= info[i].likes %></span> -->
                <!-- <span class='fa fa-thumbs-up'></span> -->
                <span class='fa fa-trash'></span>
            </li>
            <% } %>
        <% } %>
        </ul>
    </div>

    <div>
        <!-- <h2>Add A Task:</h2> -->

        <form action="/addToDo" method="POST">
            <input type="text" placeholder="Task" maxlength="80" name="taskBody">
            <input type="datetime-local" name="deadline">
            <input type="submit">
        </form>
    </div>

    <div id="messages">
        <!-- <h2>Messages</h2> -->

        <ul class="messages">
            <% for(let i=0; i < info.length; i++) {%>
                <% if(info[i].class === 'message') { %>
                    <% let date = info[i].timeSent.toString().split(' ') %>
                <li class="message">
                    <span><%= date.slice(4,5) %></span>
                    <span><%= info[i].messageBody %></span>
                    <!-- <span class='fa fa-trash'></span> -->
                </li>
                <% } %>
            <% } %>
        </ul>    
        <form action="/addMessage" method="POST">
            <input type="text" placeholder="Max characters: 140" maxlength="140" name="messageBody">
            <input type="submit">
        </form>
    </div>
    <script src='js/main.js'></script>
</body>
</html>
