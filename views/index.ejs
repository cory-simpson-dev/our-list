<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">

</head>
<body>
    <div class="header">
        <h1>Our List</h1>
    </div>
    <div class="selection-container">
        <span id="todo-selection" class="todo selection">To-do</span>
        <span id="grocery-selection" class="grocery selection">Grocery</span>
    </div>
    <div class="tasks-container">
        <section id="todo-list" class="tasks-toggle">
            <h3>
                <span class="task">Task</span>
                <span class="deadline">Deadline</span>
            </h3>
            <div class="chore-container">
                <ul class="tasks chore-ul">
                    <% for(let i=0; i < info.length; i++) {%>
                        <% if(info[i].class === 'todo' && info[i].category === 'todo') { %>
                        <li class="task">
                            <span class='fa fa-trash'></span>
                            <span><%= info[i].taskBody %></span>
                            <span class="deadline"><%= info[i].deadline.split('T').join(' ') %></span>
                        </li>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </section>

        <section id="grocery-list" class="groceries-toggle">
            <h3>Grocery List</h3>
            <div class="groceries-container">
                <div class="uncategorized-groceries">
                    <ul class="tasks">
                        <% for(let i=0; i < info.length; i++) {%>
                            <% if(info[i].class === 'todo' && info[i].category === 'grocery' && info[i].gc === 'none') { %>
                            <li class="task">
                                <span class='fa fa-trash'></span>
                                <span><%= info[i].taskBody %></span>
                            </li>
                            <% } %>
                        <% } %>
                    </ul>
                </div>
                <section id="grocery-right">
                    <div id="produce">
                        <ul class="tasks">
                            <li class="category-title">Produce</li>
                            <% for(let i=0; i < info.length; i++) {%>
                                <% if(info[i].class === 'todo' && info[i].category === 'grocery' && info[i].gc === 'produce') { %>
                                <li class="task">
                                    <span class='fa fa-trash'></span>
                                    <span><%= info[i].taskBody %></span>
                                </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                    <div id="frozen">
                        <ul class="tasks">
                            <li class="category-title">Frozen</li>
                            <% for(let i=0; i < info.length; i++) {%>
                                <% if(info[i].class === 'todo' && info[i].category === 'grocery' && info[i].gc === 'frozen') { %>
                                <li class="task">
                                    <span class='fa fa-trash'></span>
                                    <span><%= info[i].taskBody %></span>
                                </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                    <div id="bakery">
                        <ul class="tasks">
                            <li class="category-title">Bakery</li>
                            <% for(let i=0; i < info.length; i++) {%>
                                <% if(info[i].class === 'todo' && info[i].category === 'grocery' && info[i].gc === 'bakery') { %>
                                <li class="task">
                                    <span class='fa fa-trash'></span>
                                    <span><%= info[i].taskBody %></span>
                                </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                    <div id="other">
                        <ul class="tasks">
                            <li class="category-title">Other</li>
                            <% for(let i=0; i < info.length; i++) {%>
                                <% if(info[i].class === 'todo' && info[i].category === 'grocery' && info[i].gc === 'other') { %>
                                <li class="task">
                                    <span class='fa fa-trash'></span>
                                    <span><%= info[i].taskBody %></span>
                                </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                </section>
            </div>
        </section>
        <div class="add-to-do">

            <form class="add-item-form" action="/addToDo" method="POST">
                <select id="category" name="category">
                    <option value="grocery">Grocery</option>
                    <option value="todo" selected>To Do</option>
                </select>
                <input type="text" placeholder="Add an item" maxlength="35" name="taskBody">
                <select id="gc" name="gc">
                    <option value="none" selected>Select a category</option>
                    <option value="produce">Produce</option>
                    <option value="frozen">Frozen</option>
                    <option value="bakery">Bakery</option>
                    <option value="other">Other</option>
                </select>
                <input id="deadline" type="datetime-local" name="deadline">
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
    
   

    <div id="messages" class="messages-container">

        <div id="chat-container" class="chat-container">
            <ul class="messages">
                <% for(let i=0; i < info.length; i++) {%>
                    <% if(info[i].class === 'message') { %>
                        <% let date = info[i].timeSent.toString().split(' ') %>
                        <li class="message">
                            <span class="date"><%= date.slice(4,5) %></span>
                            <span><%= info[i].messageBody %></span>
                            <!-- <span class='fa fa-trash'></span> -->
                        </li>
                    <% } %>
                <% } %>
            </ul>    
        </div>
        <script>
            var div = document.getElementById("chat-container")
            div.scrollTop = div.scrollHeight
        </script>
        <form action="/addMessage" method="POST" class="send-message-form">
            <input type="text" placeholder="Send a message" maxlength="140" name="messageBody">
            <button type="submit">Send</button>
        </form>
    </div>
    <script src='js/main.js'></script>
</body>
</html>
